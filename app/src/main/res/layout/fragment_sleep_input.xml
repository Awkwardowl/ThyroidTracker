<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finalproj.finley.thyroidtracker.input.energy_input">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.finalproj.finley.thyroidtracker.Input_Energy">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonA"
                    android:layout_width="165.0dip"
                    android:layout_height="140.0dip"
                    android:layout_gravity="center"
                    android:layout_marginBottom="35.0dip"
                    android:layout_marginLeft="17dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/goodsleep"
                    android:padding="5.0dip"
                    android:textAlignment="gravity"
                    android:textColor="#ffffffff"
                    android:textSize="20.0sp" />

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="165.0dip"
                    android:layout_height="140.0dip"
                    android:layout_gravity="center"
                    android:layout_marginBottom="35.0dip"
                    android:layout_marginLeft="17dip"
                    android:layout_marginRight="5.0dip"
                    android:background="@drawable/badsleep"
                    android:padding="5.0dip"
                    android:textAlignment="gravity"
                    android:textColor="#ffffffff"
                    android:textSize="20.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonB"
                    android:layout_width="165.0dip"
                    android:layout_height="140.0dip"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/okaysleep"
                    android:padding="0.0dip"
                    android:textAlignment="gravity"
                    android:textColor="#ffffffff"
                    android:textSize="20.0sp" />

                <Button
                    android:id="@+id/buttonD"
                    android:layout_width="wrap_content"
                    android:layout_height="118.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="20.0dip"
                    android:background="#ffffff00"
                    android:padding="22.0dip"
                    android:text="Button 4"
                    android:textAlignment="gravity"
                    android:textColor="#ffffffff"
                    android:textSize="20.0sp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
